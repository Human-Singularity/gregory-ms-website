{{- "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML -}}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ range $article := $.Site.Data.articles }}
    <url>
      <loc>{{ printf "https://gregory-ms.com/articles/%d/%s" (int $article.article_id) $article.slug | replaceRE "/^(.*?)(\\.0+)?$/i" "$1" | safeURL }}</loc>
      <lastmod>{{ $article.published_date | safeHTML }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
    </url>
  {{ end }}
  {{ range $page := where .Site.RegularPages "Type" "!=" "draft" }}
  <url>
    <loc>{{ $page.Permalink }}</loc>
    <lastmod>{{ $page.Lastmod.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  {{ end }}
</urlset>